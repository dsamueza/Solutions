                'Periodo': $("#slPeriodo").val().toString(),
                'id': idActividad,
                'UrlPath': urlArchivo.toString(),
                'idCliente': $('#idCliente').val().toString()
            }


            ClearModal();
            $.ajax({

                type: "POST",
                url: "@Url.Action("ActualizarActividad", "Docente")",
                data: dataRow,
                success: function (estado) {

                    if (estado[0].Id == "True") {
                        $('#calendar').fullCalendar('refetchEvents');
                        $('#myModal').modal('hide');
                        return
                    }
                    bootbox.alert("No se pudo guardar la actividad verifique la información")
                },
                async: false,
                cache: false,
                error: function () { }
            });

        });
        $('#EliminarActividad').click(function () {

            var dataRow = {
                'id': idActividad
            }

            ClearModal();
            $.ajax({

                type: "POST",
                url: "@Url.Action("EliminarActividad", "Docente")",
                data: dataRow,
                success: function (estado) {

                    if (estado[0].Id == "True") {
                        $('#calendar').fullCalendar('refetchEvents');
                        $('#myModal').modal('hide');
                        return
                    }
                    bootbox.alert("No se pudo eliminar la actividad")
                },
                async: false,
                cache: false,
                error: function () { }
            });

        });
        function generar() {
            var periodo = $("#slPeriodo").val()
            var noTime = Date.now();
            $('#calendar').fullCalendar('refetchEvents');
            $('#calendar').fullCalendar({

                header: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'month,agendaWeek,agendaDay'
                },
                defaultDate: noTime,
                lang: 'es',
                selectable: true,
                selectHelper: true,
                defaultView: 'agendaWeek',
                //dayClick: function (start, end) {


                //    alert(start)
                //    alert(end)
                //    ShowModal(start, end);
                //},
                select: function (start, end) {

                    ShowModal(start, end);
                },
                eventDrop: function (event, dayDelta, minuteDelta, allDay, revertFunc) {
                    if (confirm("¿Desea Mover su evento?")) {
                        EditModal(event.id)
                    }
                    else {
                        revertFunc();
                    }
                },
                eventClick: function (calEvent, jsEvent, view) {
                    EditModal(calEvent.id)
                },
                editable: true,
                eventLimit: false, // allow "more" link when too many events
                events: {
                    url: "@Url.Action("GetEventos", "Docente")",
                    type: 'POST',
                    data: {
                        perido: periodo,

                    },
                    error: function () {
                        alert('there was an error while fetching events!');
                    },
                }
            });


        };
    </script>
