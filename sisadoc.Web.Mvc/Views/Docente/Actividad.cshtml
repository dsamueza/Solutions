        function FormatoDate(idFECHA)

        {
            FECHAFORMAT = moment(idFECHA).format('YYYY/MM/DD HH:mm:ss ')
            return FECHAFORMAT

        }
        //Cargar archivos
        $('#file-es').fileinput({
            language: 'es',
            uploadAsync: true,
            maxFileCount: 1,
            showUpload: true,

            uploadUrl: "@Url.Action("Upload", "Docente")",
            allowedFileExtensions: ['jpg', 'png', 'gif', 'jpeg'],

        }).on('fileuploaded', function (event, data, id, index) {
